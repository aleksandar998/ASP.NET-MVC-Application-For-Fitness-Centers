@model IEnumerable<DomaciZadatak.Models.AktivnostBO>

@{
    ViewBag.Title = "Index";
}

<style type="text/css">
    .myTable {
        background-color: #aab2bf;
        border-collapse: collapse;
    }

        .myTable th {
            background-color: #45494f;
            color: white;
            width: 50%;
        }

        .myTable td, .myTable th {
            padding: 5px;
            border: 1px solid #45494f;
        }
</style>



<table class="myTable">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AktivnostID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Naziv)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cena)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AktivnostID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Naziv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cena)
            </td>
            <td>
                @Html.ActionLink("Obrisi", "Delete", new { id = item.AktivnostID }, null)
            </td>
        </tr>
    }

</table>
