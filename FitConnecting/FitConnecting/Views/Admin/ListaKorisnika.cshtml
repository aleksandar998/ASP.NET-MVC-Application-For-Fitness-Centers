@model IEnumerable<DomaciZadatak.Models.KorisnikBO>

@{
    ViewBag.Title = "ListaKorisnika";
}

<h2 style="color:white;">Lista Korisnika</h2>

<style type="text/css">
    .myTable {
        background-color: #aab2bf;
        border-collapse: collapse;
    }

        .myTable th {
            background-color: #45494f;
            color: white;
            width: 30%;
        }

        .myTable td, .myTable th {
            padding: 5px;
            border: 1px solid #45494f;
        }
</style>

<table class="myTable">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.JMBG)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prezime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DatumRodj)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lozinka)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.JMBG)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Prezime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DatumRodj)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Lozinka)
        </td>
        <td>
            @Html.ActionLink("Obrisi", "ObrisiKorisnika", new { id=item.JMBG },null)
        </td>
    </tr>
}

</table>
